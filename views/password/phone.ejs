<%- include('../partials/head') %>


<!-- slider -->
<div class="container margin-top-control-other">
    <div class="card  shadow-lg o-hidden border-0 my-5 register">
        <div class="card-body p-0">
            <div class="row">
                <div class="col-lg-5 d-none d-lg-flex ">
                    <div class="flex-grow-1 bg-register-image ">
                        <img src="/images/slider/Image 4.jpg.png" alt=""
                            style="width: 100%;height: 100%;background-size: cover;">
                    </div>
                </div>
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h4 class="text mb-4 user-heading" style="color: #16AF00;font-size: xx-large;">Access your
                                Account!</h4>
                        </div>
                        <% if(Ferror && Ferror.length>0){ %>
                        <div class="alert alert-danger" role="alert">
                            <strong><%=Ferror%></strong>
                        </div>
                        <% } %>
                        <form action="/password/phone" method="POST">
                            <div class="form-group">
                                <div class="text-center form-content">
                                    <a class="small user-text" href="#" style="margin-left: 10px;">Enter your Mobile number</a>
                                </div>
                                <input type="tel" class="form-control form-content" id="num" name="phNumber"
                                    placeholder="8674XXXXXX" pattern="[9876]{1}[0-9]{9}" required>
                            </div>
                            <button class="btn btn-primary btn-block text-white btn-user form-content send-otp"
                                type="submit">SEND OTP</button>
                        </form>

                        <div class="text-center form-content">
                            <a class="small user-text" href="/login">Already have an account?Login!</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- slider ends -->

<%- include('../partials/tail') %>