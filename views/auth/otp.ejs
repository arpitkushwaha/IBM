<%- include('../partials/head') %>

<!-- slider -->
<div class="container margin-top-control-other">
    <div class="card  shadow-lg o-hidden border-0 my-5 register">
        <div class="card-body p-0">
            <div class="row">
                <div class="col-lg-5 d-none d-lg-flex ">
                    <div class="flex-grow-1 bg-register-image ">

                        <img src="/images/slider/Image 3.jpg.png" alt=""
                            style="width: 100%;height: 100%;background-size: cover;">
                    </div>
                </div>
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <img src="/images/Logo/usercreate.jpg" alt="" style="width: 50px;height: 50px;">
                            <h4 class="text mb-4 user-heading" style="color: #16AF00;font-size: xx-large;">Create an
                                Account!</h4>
                        </div>
                        <% if(Ferror && Ferror.length>0){ %>
                        <div class="alert alert-danger" role="alert">
                            <strong><%=Ferror %></strong>
                        </div>
                        <% } %>
                        <form action="/register/otp" method="POST">
                            <div class="form-group justify-content-center">
                                <div class="text-center form-content">
                                    <a class="small user-text" href="#" style="margin-left: 10px;">Enter One Time Password(OTP)
                                    </a>
                                </div>
                                <div class="text-center form-content">
                                    <!-- <a class="small" href="#" style="margin-left: 10px;">Please Do Not refresh the page
                                    </a> -->
                                </div>
                                <input type="tel" class="form-control form-content" id="num" name="phNumber"
                                    value="<%=phNumber%>" pattern="[1-9]{1}[0-9]{9}" readonly>

                                <div class="row justify-content-center">

                                    <input type="text" class=" inputs form-control form-content" id="OTP1" name="O1"
                                        placeholder="*" min="1" maxlength="1" required inputmode="numeric"
                                        autocomplete="off">
                                    <input type="text" class=" inputs form-control form-content" id="OTP2" name="O2"
                                        placeholder="*" min="1" maxlength="1" required inputmode="numeric"
                                        autocomplete="off">
                                    <input type="text" class=" inputs form-control form-content" id="OTP3" name="O3"
                                        placeholder="*" min="1" maxlength="1" required inputmode="numeric"
                                        autocomplete="off">
                                    <input type="text" class=" inputs form-control form-content" id="OTP4" name="O4"
                                        placeholder="*" min="1" maxlength="1" required inputmode="numeric"
                                        autocomplete="off">

                                    <button class="btn btn-primary btn-block text-white btn-user form-btn mt-3"
                                        type="submit">PROCEED</button>
                                </div>

                            </div>
                        </form>
                        <div class="text-center form-content">
                            <a class="small user-text" href=".">Didn't recieve OTP?</a>
                        </div>
                        <div class="text-center form-content">
                            <a class="small user-text" href="/register">Edit PhoneNumber</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(".inputs").keyup(function () {
        if (this.value.length == this.maxLength) {
            $(this).next('.inputs').focus();
        }
        else {
            $(this).prev('.inputs').focus();
        }
    });
</script>

<!-- slider ends -->

<%- include('../partials/tail') %>